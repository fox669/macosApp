@model MacosApp.Web.Models.ReportViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LabourId" />

            <partial name="_Report" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="DetailsLabour" asp-route-id="@Model.LabourId" class="btn btn-success">Back to Labour</a>
            </div>
        </form>
    </div>
</div>
